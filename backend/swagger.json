{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "Contacts API is designed to CRUD contacts from a database.",
    "version": "1.0.0"
  },
  "host": "cse341-contactsproject.onrender.com",
  "basePath": "/",
  "schemes": [
    "http", "https"
  ],
  "paths": {
    "/api-docs": {
      "get": {
        "description": "Displays documentation of this API to help others understand it.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/contacts/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "description": "Gets all contacts that are stored in the database and displays them as a JSON",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "description": "Creates a new contact and stores it in the database. Automatically generates an id.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Doe"
                },
                "email": {
                  "example": "john12doe@email.com"
                },
                "favoriteColor": {
                  "example": "Green"
                },
                "birthday": {
                  "example": "MM/DD/YYYY"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "description": "Retrieves and displays one specific contact that is identified by {id}.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Contacts"
        ],
        "description": "Updates the body of a specific contact in the database that is identified by {id}.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Doe"
                },
                "email": {
                  "example": "john12doe@email.com"
                },
                "favoriteColor": {
                  "example": "Green"
                },
                "birthday": {
                  "example": "MM/DD/YYYY"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "description": "Deletes a specific contact from the database that is identified by the {id}.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}